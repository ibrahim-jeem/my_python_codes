#This code will - Rotate, Resize, Save the image in a specific formate in a specific folder.

#!/usr/bin/env python3

import os, sys
from PIL import Image

rotate = input("Rotation degree:")

for root, dirs, files in os.walk("."):
  for file in files:
    f, e = os.path.splitext(file)
    savefile = "/opt/icons/" + f
    try:
      #print(outfile)
      Image.open(file).rotate(rotate).resize((128,128)).convert("RGB").save(outfile, "JPEG")

    except IOError:
      print("cannot convert", file)

print("task complete")
